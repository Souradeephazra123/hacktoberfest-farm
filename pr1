pip install lorem-text
pip install lorem

lorem = TextLorem(wsep=' ', srange=(60,60))
s1 = lorem.sentence()

lorem = TextLorem(wsep='', srange=(8,8), words='1 2 3 5 r s d f a g s'.split())
s2 = (lorem.sentence())

lorem = TextLorem(wsep='', srange=(8,8),words = 'a s d f a d s f'.split())
s3 = lorem.sentence() 

print(s1)
print(s2)
print(s3)
